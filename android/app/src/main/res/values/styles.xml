<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema para la ventana de inicio mientras la app carga (cuando el modo oscuro estÃ¡ desactivado) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Splash screen que se muestra mientras Flutter inicializa -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Tema que se aplica una vez que Flutter inicia -->
    <style name="NormalTheme" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- Personaliza colores si es necesario -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>
